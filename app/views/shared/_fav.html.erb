<% if @micropost.fav_user(current_user.id) %>
    <%= button_to micropost_fav_path(favs, micropost_id: micropost.id), method: :delete, id: "Fav-button", remote: true do %>

        <span>
      <%= micropost.favs_count %>
    </span>
    <% end %>
<% else %>
    <%= button_to micropost_fav_path(micropost),id: "Fav-button", remote: true do %>

        <span>
      <%= micropost.favs_count %>
    </span>
    <% end %>
<% end %>